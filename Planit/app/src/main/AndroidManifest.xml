<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Planit"
        tools:targetApi="31">

        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Planit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TaskDetailActivity"
            android:exported="false"
            android:label="@string/task_detail_label"
            android:theme="@style/Theme.Planit" />
        <activity
            android:name=".activity.TaskCreateActivity"
            android:exported="false"
            android:label="@string/task_create_label"
            android:theme="@style/Theme.Planit" />
        <activity
            android:name=".activity.TaskEditActivity"
            android:exported="false"
            android:label="@string/task_edit_label"
            android:theme="@style/Theme.Planit" />
        <activity
            android:name=".activity.NoteEditActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SubjectEditActivity"
            android:exported="false" />
    </application>

</manifest>